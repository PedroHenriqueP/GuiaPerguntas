<%- include ('partials/header.ejs') %>
<body>
    <%- include ('partials/navbar.ejs') %>
    
    <div class="container">
        <hr>
        <h1> <%= pergunta.titulo %> </h1>
        <p> <%= pergunta.descricao %> </p>
        <hr>
        <form method="POST" action="/salvarresposta">
            <h3>Responda</h3>
            <label>Reposta:</label>
            <textarea placeholder="Digite sua resposta" class="form-control" name="corpo"></textarea>
            <input type="hidden" value="<%= pergunta.id %>" name="perguntaId">
            <br>
            <button type="submit" class="btn btn-primary">Responder</button>
        </form>
        <br>
        <h3>Respostas</h3>
        <% respostas.forEach(resposta => { %>
            <hr>
            <p> <%= resposta.corpo %> </p>
        <% }) %>
    </div>

</body>
<%- include ('partials/footer.ejs') %>